<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.freddy.kulakeyboard.library.CImageButton
        android:id="@+id/btn_send"
        android:layout_width="40dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="40dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="10dp"
        app:kula_kb_cib_normal_image_res_id="@drawable/ic_chat_expression_normal"
        app:kula_kb_cib_pressed_image_res_id="@drawable/ic_chat_expression_pressed" />

    <com.freddy.kulakeyboard.library.CImageButton
        android:id="@+id/btn_delete"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="@id/btn_send"
        app:layout_constraintRight_toLeftOf="@id/btn_send"
        android:layout_marginEnd="14dp"
        app:kula_kb_cib_normal_image_res_id="@drawable/ic_chat_more_normal"
        app:kula_kb_cib_pressed_image_res_id="@drawable/ic_chat_more_pressed" />
</androidx.constraintlayout.widget.ConstraintLayout>